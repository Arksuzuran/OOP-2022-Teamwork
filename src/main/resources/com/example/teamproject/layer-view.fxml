<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="LayerBox" prefHeight="70.0" prefWidth="160.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamproject.controller.LayerUIController">
   <children>
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label fx:id="LayerNameLabel" text="图层1">
               <HBox.margin>
                  <Insets left="5.0" right="80.0" top="5.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="39.0" prefWidth="160.0">
         <children>
            <Button mnemonicParsing="false" onAction="#OnImportImageButtonClick" text="导入">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#OnLayerDeleteButtonClick" prefHeight="15.0" prefWidth="40.0" text="删除">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="LayerSelectButton" alignment="CENTER" mnemonicParsing="false" onAction="#OnLayerSelectButtonClick" prefHeight="15.0" prefWidth="40.0" text="选中">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <CheckBox fx:id="VisibleCheckBox" mnemonicParsing="false" onAction="#onVisibleCheckBoxChanged" selected="true" text="图层可见">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
   </children>
</VBox>
