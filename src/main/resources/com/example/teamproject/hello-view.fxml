<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1170.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamproject.controller.MainUIController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="42.0" prefWidth="562.0">
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="23.0" prefWidth="420.0">
        <buttons>
      
            <Label fx:id="welcomeText" alignment="TOP_LEFT" prefHeight="15.0" prefWidth="335.0" text="haSAIki" />
            <Button fx:id="NewWorkButton" alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#OnNewWorkButtonClick" prefHeight="23.0" prefWidth="75.0" text="文件" />
            <Button alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#onHelloButtonClick" prefWidth="75.0" text="编辑" />
            <Button alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#onHelloButtonClick" prefWidth="75.0" text="撤销" />
        </buttons>
      </ButtonBar>
   </HBox>
   <HBox prefHeight="800.0" prefWidth="1170.0">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
      <VBox alignment="TOP_CENTER" minWidth="50.0" prefHeight="482.0" prefWidth="60.0">
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="画笔">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onSelectorButtonClick" prefHeight="32.0" prefWidth="40.0" text="选区">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onSelectorButtonClick" prefHeight="32.0" prefWidth="40.0" text="橡皮">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="90.0" prefWidth="47.0" text="图像处理" textOverrun="CLIP">
            <effect>
               <ColorAdjust brightness="0.06" contrast="0.08" />
            </effect>
         </Button>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="这里是工具栏，纵向布局" wrappingWidth="21.333343505859375" />
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" minWidth="125.0" prefHeight="482.0" prefWidth="140.0">
         <VBox prefHeight="266.0" prefWidth="123.0">
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <ColorPicker fx:id="PenColorPicker" onAction="#OnPenColorPickerSet" prefHeight="25.0" prefWidth="100.0">
                        <VBox.margin>
                           <Insets bottom="20.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <HBox alignment="TOP_CENTER" prefHeight="23.0" prefWidth="117.0">
                        <children>
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="画笔粗细" wrappingWidth="85.33334350585938" />
                           <Label fx:id="PenWidthLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="15.0" prefWidth="335.0" text="5" />
                        </children>
                     </HBox>
                     <Slider fx:id="PenWidthSlider" min="1.0" onMouseDragged="#OnPenWidthSliderSet" onMouseReleased="#OnPenWidthSliderSet" prefHeight="14.0" prefWidth="83.0" value="5.0" />
                     <HBox prefHeight="23.0" prefWidth="117.0">
                        <children>
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="抖动修正" wrappingWidth="85.33334350585938" />
                           <Label fx:id="SmoothLevelLabel" alignment="CENTER" minWidth="16.0" prefHeight="15.0" prefWidth="335.0" text="1" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               <Slider fx:id="SmoothLevelSlider" max="4.0" min="1.0" onMouseDragged="#OnSmoothLevelSliderSet" onMouseReleased="#OnSmoothLevelSliderSet" prefHeight="14.0" prefWidth="83.0" value="1.0">
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </Slider>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <ColorPicker fx:id="RegionColorPicker" prefHeight="25.0" prefWidth="100.0">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <HBox prefHeight="30.0" prefWidth="200.0">
                        <children>
                           <Button mnemonicParsing="false" onAction="#OnRegionFillButtonClick" text="填充">
                              <HBox.margin>
                                 <Insets right="15.0" />
                              </HBox.margin>
                           </Button>
                           <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#OnRegionSelectedButtonClick" text="确认选区" />
                        </children>
                     </HBox>
                     <CheckBox fx:id="SelectSaveCheckBox" mnemonicParsing="false" onAction="#OnSelectSaveCheckBoxChanged" selected="true" text="选区状态保留">
                        <VBox.margin>
                           <Insets bottom="5.0" />
                        </VBox.margin>
                     </CheckBox>
                     <CheckBox fx:id="SelectLineCheckBox" mnemonicParsing="false" onAction="#OnSelectLineCheckBoxChanged" selected="true" text="选区框可见" />
                  </children>
               </VBox>
            </children>
         </VBox>
         <VBox prefHeight="222.0" prefWidth="117.0">
            <children>
               <Button fx:id="NewLayerButton" mnemonicParsing="false" onAction="#onNewLayerButtonClick" text="新建图层" />
               <VBox fx:id="LayerBox" prefHeight="200.0" prefWidth="100.0" />
            </children>
         </VBox>
      </VBox>
      <ScrollPane fx:id="DrawingScrollPane" minWidth="900.0" prefWidth="900.0" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="1190.0">
      <Text fx:id="OutputText" strokeType="OUTSIDE" strokeWidth="0.0" text="这里是底部信息栏，会显示程序的提示信息，当前鼠标坐标等" wrappingWidth="444.0" />
   </HBox>
</VBox>
