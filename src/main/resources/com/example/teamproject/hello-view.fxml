<VBox alignment="TOP_CENTER" prefHeight="580.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamproject.controller.MainUIController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="42.0" prefWidth="562.0">
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="23.0" prefWidth="420.0">
        <buttons>
            <Button fx:id="NewWorkButton" alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#OnNewWorkButtonClick" prefHeight="23.0" prefWidth="75.0" text="文件" />
            <Button alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#onHelloButtonClick" prefWidth="75.0" text="编辑" />
            <Button alignment="CENTER" contentDisplay="CENTER" minWidth="25.0" onAction="#onHelloButtonClick" prefWidth="75.0" text="撤销" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="15.0" prefWidth="100.0" text="抖动修正" />
            <Slider prefHeight="14.0" prefWidth="83.0" />
            <Label minWidth="16.0" prefHeight="15.0" text="5" />
      
            <Label fx:id="welcomeText" alignment="TOP_LEFT" prefHeight="15.0" prefWidth="335.0" text="这里是顶栏" />
        </buttons>
      </ButtonBar>
      <ButtonBar prefHeight="23.0" prefWidth="273.0">
        <buttons>
            <Button alignment="CENTER" onAction="#onHelloButtonClick" prefWidth="125.0" text="返回主页" />
        </buttons>
      </ButtonBar>
   </HBox>
   <HBox prefHeight="527.0" prefWidth="790.0">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
      <VBox alignment="TOP_CENTER" prefHeight="482.0" prefWidth="54.0">
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="铅笔">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="钢笔">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="喷枪">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="选区">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="油漆">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="橡皮">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="90.0" prefWidth="47.0" text="图像处理" textOverrun="CLIP">
            <effect>
               <ColorAdjust brightness="0.06" contrast="0.08" />
            </effect>
         </Button>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="这里是工具栏，纵向布局" wrappingWidth="21.333343505859375" />
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="482.0" prefWidth="123.0">
         <VBox prefHeight="186.0" prefWidth="117.0">
            <children>
               <ColorPicker fx:id="ColorChooser" onAction="#OnColorPickerSet">
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </ColorPicker>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="这里是笔刷设置区，根据当前选择的笔刷动态变化" wrappingWidth="95.33334350585938" />
               <HBox alignment="TOP_CENTER" prefHeight="23.0" prefWidth="117.0">
                  <children>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="画笔粗细" wrappingWidth="85.33334350585938" />
                     <Label fx:id="PenWidthLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="15.0" prefWidth="335.0" text="5" />
                  </children>
               </HBox>
               <Slider fx:id="PenWidthSlider" min="1.0" onMouseDragged="#OnPenWidthSliderSet" onMouseReleased="#OnPenWidthSliderSet" prefHeight="14.0" prefWidth="83.0" value="5.0">
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </Slider>
            </children>
         </VBox>
         <VBox prefHeight="204.0" prefWidth="117.0">
            <children>
               <Button fx:id="NewLayerButton" mnemonicParsing="false" onAction="#onNewLayerButtonClick" text="新建图层" />
               <VBox fx:id="LayerBox" prefHeight="200.0" prefWidth="100.0" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="这里是图层设置区" />
            </children>
         </VBox>
      </VBox>
      <ScrollPane fx:id="DrawingScrollPane" prefHeight="400.0" prefWidth="600.0" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="71.0" prefWidth="790.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="这里是底部信息栏，会显示程序的提示信息，当前鼠标坐标等" wrappingWidth="444.0" />
   </HBox>
