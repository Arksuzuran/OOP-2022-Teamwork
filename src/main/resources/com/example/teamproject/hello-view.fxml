<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="1250.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamproject.controller.MainUIController">
   <MenuBar prefHeight="50.0" prefWidth="1250.0">
     <menus>
       <Menu mnemonicParsing="false" text="文件">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#OnNewWorkButtonClick" text="新建" />
               <MenuItem mnemonicParsing="false" onAction="#OnImportWorkButtonClick" text="打开" />
               <MenuItem mnemonicParsing="false" text="保存" />
               <MenuItem mnemonicParsing="false" onAction="#OnSaveWorkButtonClick" text="另存为" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="编辑">
         <items>
           <MenuItem mnemonicParsing="false" text="撤销" />
               <MenuItem mnemonicParsing="false" text="重做" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="帮助">
         <items>
           <MenuItem mnemonicParsing="false" text="关于" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <HBox prefHeight="900.0" prefWidth="1230.0">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
      <VBox alignment="TOP_CENTER" minWidth="50.0" prefHeight="900.0" prefWidth="60.0">
         <Button mnemonicParsing="false" onAction="#onPenBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="画笔">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onSelectorButtonClick" prefHeight="32.0" prefWidth="40.0" text="选区">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onEraserBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="橡皮">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onShapeBrushButtonClick" prefHeight="32.0" prefWidth="40.0" text="图形">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onImageProcessButtonClick" prefHeight="32.0" prefWidth="40.0" text="图像">
            <VBox.margin>
               <Insets bottom="15.0" />
            </VBox.margin>
         </Button>
         <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onImageProcessButtonClick" prefHeight="90.0" prefWidth="47.0" text="图像处理" textOverrun="CLIP">
            <effect>
               <ColorAdjust brightness="0.06" contrast="0.08" />
            </effect>
         </Button>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" minWidth="125.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="900.0" prefWidth="180.0">
         <VBox fx:id="BrushBox" prefHeight="270.0" prefWidth="123.0">
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <ColorPicker fx:id="PenColorPicker" onAction="#OnPenColorPickerSet" prefHeight="25.0" prefWidth="100.0">
                        <VBox.margin>
                           <Insets bottom="20.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <HBox alignment="TOP_CENTER" prefHeight="23.0" prefWidth="117.0">
                        <children>
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="画笔粗细" wrappingWidth="85.33334350585938" />
                           <Label fx:id="PenWidthLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="15.0" prefWidth="335.0" text="5" />
                        </children>
                     </HBox>
                     <Slider fx:id="PenWidthSlider" min="1.0" onMouseDragged="#OnPenWidthSliderSet" onMouseReleased="#OnPenWidthSliderSet" prefHeight="14.0" prefWidth="83.0" value="5.0" />
                     <HBox prefHeight="23.0" prefWidth="117.0">
                        <children>
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="抖动修正" wrappingWidth="85.33334350585938" />
                           <Label fx:id="SmoothLevelLabel" alignment="CENTER" minWidth="16.0" prefHeight="15.0" prefWidth="335.0" text="1" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               <Slider fx:id="SmoothLevelSlider" max="4.0" min="1.0" onMouseDragged="#OnSmoothLevelSliderSet" onMouseReleased="#OnSmoothLevelSliderSet" prefHeight="14.0" prefWidth="83.0" value="1.0">
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </Slider>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <ColorPicker fx:id="RegionColorPicker" prefHeight="25.0" prefWidth="100.0">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <HBox prefHeight="30.0" prefWidth="200.0">
                        <children>
                           <Button mnemonicParsing="false" onAction="#OnRegionFillButtonClick" text="填充">
                              <HBox.margin>
                                 <Insets right="15.0" />
                              </HBox.margin>
                           </Button>
                           <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#OnRegionSelectedButtonClick" text="确认选区" />
                        </children>
                     </HBox>
                     <CheckBox fx:id="SelectSaveCheckBox" mnemonicParsing="false" onAction="#OnSelectSaveCheckBoxChanged" selected="true" text="选区状态保留">
                        <VBox.margin>
                           <Insets bottom="5.0" />
                        </VBox.margin>
                     </CheckBox>
                     <CheckBox fx:id="SelectLineCheckBox" mnemonicParsing="false" onAction="#OnSelectLineCheckBoxChanged" selected="true" text="选区框可见" />
                  </children>
               </VBox>
            </children>
         </VBox>
         <VBox prefHeight="545.0" prefWidth="180.0">
            <children>
               <HBox prefHeight="26.0" prefWidth="180.0">
                  <children>
                     <Button fx:id="NewLayerButton" mnemonicParsing="false" onAction="#onNewLayerButtonClick" text="新建图层" />
                  </children>
               </HBox>
               <ScrollPane prefHeight="487.0" prefWidth="180.0">
                  <content>
                     <VBox fx:id="LayerBox" prefHeight="450.0" prefWidth="170.0" />
                  </content>
               </ScrollPane>
            </children>
            <padding>
               <Insets top="30.0" />
            </padding>
         </VBox>
      </VBox>
      <ScrollPane fx:id="DrawingScrollPane" minWidth="980.0" prefWidth="900.0" />
   </HBox>
   <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="80.0" prefWidth="1190.0">
      <Text nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="当前">
         <HBox.margin>
            <Insets left="20.0" right="10.0" />
         </HBox.margin>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="456, 566 像素">
         <HBox.margin>
            <Insets right="350.0" />
         </HBox.margin>
      </Text>
      <Text fx:id="OutputText" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="这里是底部信息栏，会显示程序的提示信息，当前鼠标坐标等" wrappingWidth="444.0" />
   </HBox>
   <padding>
      <Insets bottom="5.0" />
   </padding>
</VBox>
